# Environment Variables Configuration
# Copy this file to .env and customize values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=pokemon_db
POSTGRES_USER=pokemon_user
POSTGRES_PASSWORD=your_secure_password_here_change_me
POSTGRES_PORT=5432

# SQLAlchemy connection string (auto-generated in Docker)
DATABASE_URL=postgresql://pokemon_user:your_secure_password_here_change_me@localhost:5432/pokemon_db

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=False

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_redis_password_here_change_me
REDIS_PORT=6379
REDIS_URL=redis://:your_redis_password_here_change_me@localhost:6379/0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_PORT=8501
ADMINER_PORT=8080
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here_generate_random_32_chars
JWT_SECRET=your_jwt_secret_here_generate_random_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# API CONFIGURATION
# =============================================================================
POKEAPI_BASE_URL=https://pokeapi.co/api/v2
API_RATE_LIMIT=100
API_TIMEOUT_SECONDS=30

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=

# =============================================================================
# MACHINE LEARNING
# =============================================================================
ML_MODEL_PATH=models/
ML_CACHE_PREDICTIONS=true

# =============================================================================
# DATA QUALITY
# =============================================================================
ENABLE_DATA_VALIDATION=true
DATA_QUALITY_THRESHOLD=0.95

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=false
TESTING=false
RELOAD=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env to version control!
# 2. Generate secure passwords: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. For production, use a secrets manager (AWS Secrets Manager, Azure Key Vault, etc.)
# 4. Rotate credentials regularly
